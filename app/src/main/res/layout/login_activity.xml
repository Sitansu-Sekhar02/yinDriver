<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_yang_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/splash_logo"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_login_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/activity_gutter_margin_double"
                android:layout_marginRight="@dimen/activity_gutter_margin_double"
                android:orientation="horizontal"
                android:weightSum="10">

                <com.hbb20.CountryCodePicker
                    android:id="@+id/login_activity_countryCode_sp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:singleLine="true"
                    android:theme="@style/AppTheme.Picker"
                    app:ccp_contentColor="@android:color/white" />

                <com.yin.driver.view.AppEditTextView
                    android:id="@+id/login_activity_mobNo_ev"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:background="@null"
                    android:gravity="center|left"
                    android:hint="@string/mobile_number"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textAppearance="@style/MediumText"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/activity_gutter_margin_double"
                android:layout_marginRight="@dimen/activity_gutter_margin_double"
                android:background="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="@dimen/activity_gutter_margin_double"
                android:layout_marginTop="8dp"
                android:layout_marginRight="@dimen/activity_gutter_margin_double"
                android:orientation="horizontal"
                android:weightSum="10">

                <com.yin.driver.view.AppEditTextView
                    android:id="@+id/login_activity_password_ev"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:background="@null"
                    android:gravity="center|left"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textAppearance="@style/MediumText"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/activity_gutter_margin_double"
                android:layout_marginRight="@dimen/activity_gutter_margin_double"
                android:background="@color/white" />

            <com.yin.driver.view.AppTextView_Title
                android:id="@+id/registration_activity_sendActivation_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/activity_gutter_margin_triple"
                android:layout_marginTop="@dimen/activity_gutter_margin_double"
                android:layout_marginRight="@dimen/activity_gutter_margin_triple"
                android:background="@drawable/bg_button_color_accent_border"
                android:gravity="center"
                android:paddingTop="@dimen/activity_gutter_margin_half"
                android:paddingBottom="@dimen/activity_gutter_margin_half"
                android:text="@string/login"
                android:textAppearance="@style/MediumText"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>


</RelativeLayout>