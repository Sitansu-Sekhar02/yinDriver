<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/activity_gutter_margin"
    android:layout_marginTop="@dimen/activity_gutter_margin"
    android:layout_marginRight="@dimen/activity_gutter_margin"
    android:background="@drawable/bg_button_color_accent_border"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="10"
        android:padding="@dimen/activity_gutter_margin_half">

      <!--  <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:padding="@dimen/activity_gutter_margin_half"
            android:gravity="top">-->

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/circle_image_height"
            android:layout_weight="4"
            android:padding="@dimen/activity_gutter_margin_half"
            android:src="@drawable/ic_profile" />
       <!-- </LinearLayout>-->

        <LinearLayout
            android:id="@+id/appointment_details_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:layout_marginRight="@dimen/activity_gutter_margin_half"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <com.yin.driver.view.AppTextView_SubTitle
                android:id="@+id/customer_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_gutter_margin_quarter"
                android:text="Nova"
                android:singleLine="true"
                android:maxLines="1"
                android:textAppearance="@style/MediumText"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <com.yin.driver.view.AppTextView_SubTitle
                android:id="@+id/service_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_gutter_margin_quarter"
                android:lineSpacingMultiplier="1.2"
                android:text="Hot Compress"
                android:singleLine="true"
                android:maxLines="1"
                android:textAppearance="@style/MediumText"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:visibility="visible" />

            <com.yin.driver.view.AppTextView_SubTitle
                android:id="@+id/date_and_time_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_gutter_margin_quarter"
                android:text="Tue. 23 Oct, 18, 03:08 AM"
                android:textAllCaps="true"
                android:singleLine="true"
                android:maxLines="1"
                android:textAppearance="@style/MediumText"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <com.yin.driver.view.AppTextView_SubTitle
                android:id="@+id/status_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingMultiplier="1.2"
                android:text="Consultant"
                android:textAppearance="@style/SmallText"
                android:textColor="@color/yellow"
                android:textStyle="bold"
                android:singleLine="true"
                android:maxLines="1"
                android:layout_gravity="center"
                android:gravity="left|center"
                android:visibility="visible" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:layout_marginLeft="@dimen/activity_gutter_margin"
            android:layout_marginRight="@dimen/activity_gutter_margin_half"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/activity_gutter_margin_half">

            <com.yin.driver.view.AppTextView_SubTitle
                android:id="@+id/confirm_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/confirm"
                android:paddingBottom="@dimen/activity_gutter_margin_half"
                android:paddingTop="@dimen/activity_gutter_margin_quarter"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/confirm_button_bg"
               />
            <com.yin.driver.view.AppTextView_SubTitle
                android:id="@+id/reject_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/reject"
                android:layout_marginTop="@dimen/activity_gutter_margin"
                android:paddingBottom="@dimen/activity_gutter_margin_half"
                android:paddingTop="@dimen/activity_gutter_margin_quarter"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/confirm_button_bg"
               />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>
