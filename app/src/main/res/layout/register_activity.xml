<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_white_splash">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/splash_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_margin_top"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_login_logo" />

        <LinearLayout
            android:id="@+id/detailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/splash_logo"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/activity_gutter_margin"
            android:layout_marginTop="@dimen/activity_margin_top"
            android:layout_marginBottom="@dimen/activity_gutter_margin_double"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_gutter_margin_half"
                android:background="@color/transparent"
                android:orientation="vertical">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/firstName"
                    android:paddingRight="@dimen/activity_gutter_margin_double"
                    android:textColorHint="@color/quantum_black_100"
                    android:visibility="visible"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                    <com.yin.driver.view.AppEditTextView
                        android:id="@+id/register_activity_firstName_etv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="@color/grey_intermediate"
                        android:digits="@string/acceptable_inputs_for_name_field"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingTop="6dp"
                        android:paddingBottom="10dp"
                        android:singleLine="true"
                        android:textAppearance="@style/MediumText"
                        android:textColor="@color/quantum_black_100"
                        android:textColorHint="@color/quantum_black_100"
                        android:textStyle="normal" />
                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/lastName"
                    android:paddingRight="@dimen/activity_gutter_margin_double"
                    android:textColorHint="@color/quantum_black_100"
                    android:visibility="visible"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                    <com.yin.driver.view.AppEditTextView
                        android:id="@+id/register_activity_lastName_etv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="@color/grey_intermediate"
                        android:digits="@string/acceptable_inputs_for_name_field"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingTop="6dp"
                        android:paddingBottom="10dp"
                        android:singleLine="true"
                        android:textAppearance="@style/MediumText"
                        android:textColor="@color/quantum_black_100"
                        android:textColorHint="@color/quantum_black_100"
                        android:textStyle="normal" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/mobile_number"
                    android:paddingRight="@dimen/activity_gutter_margin_double"
                    android:textColorHint="@color/quantum_black_100"
                    android:visibility="visible"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                    <com.yin.driver.view.AppEditTextView
                        android:id="@+id/register_activity_mobileNo_etv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="@color/grey_intermediate"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingTop="6dp"
                        android:paddingBottom="10dp"
                        android:singleLine="true"
                        android:textAppearance="@style/MediumText"
                        android:textColor="@color/quantum_black_100"
                        android:textColorHint="@color/quantum_black_100"
                        android:textStyle="normal" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_email_id"
                    android:paddingRight="@dimen/activity_gutter_margin_double"
                    android:textColorHint="@color/quantum_black_100"
                    android:visibility="visible"
                    app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

                    <com.yin.driver.view.AppEditTextView
                        android:id="@+id/register_activity_emailid_etv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:backgroundTint="@color/grey_intermediate"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingTop="6dp"
                        android:paddingBottom="10dp"
                        android:singleLine="true"
                        android:textAppearance="@style/MediumText"
                        android:textColor="@color/quantum_black_100"
                        android:textColorHint="@color/quantum_black_100"
                        android:textStyle="normal" />
                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:id="@+id/select_country_spinner_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/activity_gutter_margin"
                    android:layout_marginRight="@dimen/activity_gutter_margin"
                    android:layout_marginBottom="@dimen/activity_gutter_margin"
                    android:background="@drawable/bg_white_field"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/activity_gutter_margin_quarter">

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/select_country_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spinner_spacing"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/activity_gutter_margin"
                        android:layout_marginRight="@dimen/activity_gutter_margin"
                        android:gravity="center"
                        android:textAppearance="@style/spinner_style"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/select_city_spinner_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/activity_gutter_margin"
                    android:layout_marginRight="@dimen/activity_gutter_margin"
                    android:layout_marginBottom="@dimen/activity_gutter_margin"
                    android:background="@drawable/bg_white_field"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/activity_gutter_margin_quarter">

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/select_city_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/spinner_spacing"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/activity_gutter_margin"
                        android:layout_marginRight="@dimen/activity_gutter_margin"
                        android:gravity="center"
                        android:textAppearance="@style/spinner_style"
                        android:textStyle="normal" />

                </LinearLayout>

                <com.yin.driver.view.AppTextView_Title
                    android:id="@+id/registration_activity_register_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_gutter_margin"
                    android:background="@drawable/splash_button_bg"
                    android:paddingTop="@dimen/activity_gutter_margin_half"
                    android:paddingBottom="@dimen/activity_gutter_margin_half"
                    android:text="@string/register"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/activity_gutter_margin_double"
                    android:layout_marginLeft="@dimen/activity_gutter_margin_double"
                    android:textAppearance="@style/MediumText"
                    android:textColor="@color/app_primary"
                    android:textColorHint="@color/app_primary"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>